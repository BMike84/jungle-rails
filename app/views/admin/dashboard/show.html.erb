  <header class="page-header">
    <h1>Statistics</h1>
  </header>
  
  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Section</th>
          <th>Count</th>
        </tr>
      </thead>
      <tbody>
       <tr>
        <td>
          <h4><%= link_to 'Products', admin_products_path, class: "dash-link" %></h4>
        </td>
        <td>
        <%= @product_count %>
        </td>
       </tr>
       <tr>
        <td>
          <h4><%= link_to 'Categories', admin_categories_path, class: "dash-link" %></h4>
        </td>
        <td>
        <%=  @category_count %>
        </td>
       </tr>
      </tbody>
    </table>
  </div>

</section>
